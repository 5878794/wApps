.project_main{
    width:690rpx; min-height: 100rpx;
    margin: 50rpx auto 100rpx auto;
    background: #fff;
    box-shadow:0 2rpx 16rpx 10rpx rgba(0,0,0,0.09);
    border-radius: 18rpx;
}
.project_input_row,
picker{
    width: 100%; height: 130rpx; padding:0 40rpx;
    border-bottom:2rpx solid #eee;
    font-size:24rpx; color: #a7a7a7;
    position: relative;
}
.project_input_row input,
.project_input_mn{
    width:100%; height: 130rpx; display: block;
    color: #000;
}
.project_input_row text{
    position: absolute; left:40rpx; top:50%;
    width: 150rpx; height: 30rpx; line-height: 30rpx;
    margin-top: -15rpx;
}
.project_input_row image{
    position: absolute; width:44rpx; height: 44rpx;
    right:40rpx; top:50%; margin-top: -22rpx;
}
.dash_line{
    border-bottom-style: dashed;
    border-color:#e7e7e7;
}
.project_task_list{
    border:4rpx solid #a7a7a7;
    border-radius:54rpx;
    height:54rpx; padding: 0 20rpx;
    line-height: 46rpx;
    position: relative;
    color: #000;
    margin: 20rpx 25rpx;
}
.project_task_list .close{
    position: absolute; right:-15rpx; top:-15rpx;
    background: #ccc; color: #fff;
    width:35rpx; height: 35rpx;
    line-height: 32rpx; text-align: center;
    border-radius: 35rpx; font-size: 25rpx;
}

.project_main .box_lines{
    height: auto;
}

.project_input_row .project_type_add{
    padding:40rpx; margin-top: -62rpx; right:0;
}

.project_input_row .project_type_add_input{
    width:500rpx;
}