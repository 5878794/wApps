page{
    width: 100%; height: 100%;
}
.page{
    width:100%; height:100%; padding-bottom:50rpx;
}

.table_title{
    width: 100%; height: 52rpx;
    font-size:12rpx;
    color:#1724d1;
    text-align:center;
    border-top:2rpx solid #cacaca;
    border-bottom:2rpx solid #cacaca;
}

.table_left{
    width:280rpx; height: 52rpx; line-height: 52rpx;
    border-right:2rpx solid #f2f2f2;
}
.table_left view{
    width: 70rpx;
}

.table_right{
    //width: 95rpx;
}
.table_right_week{
    width: 182rpx; height: 52rpx;
}
.table_right_week_date{
    width: 182rpx; height: 26rpx;
    border-right:2rpx solid #f2f2f2;
}
.table_right_week_date_item{
    font-size:8rpx;
    color:#ffffff;
    text-align: center;
    background:#1724d1;
    box-shadow:0 1rpx 2rpx 0 rgba(0,0,0,0.20);
    border-radius:200px;
    width:50rpx;
    height:14rpx;
    line-height: 14rpx;
    margin-left:4rpx;
}
.table_right_week .box_hcc view{
    width: 26rpx; height: 26rpx;
    border-right:2rpx solid #f2f2f2;
    border-top:2rpx solid #f2f2f2;
    line-height: 22rpx; text-align: center;
}


.table_main_left{
    width: 280rpx; height: 100%;
}
.table_main_right{
    width:50%; height: 100%; box-sizing: border-box;
}

.table_main_left_info{
    width:280rpx; height: 52rpx; line-height: 52rpx;
    border-bottom:2rpx solid #cacaca;
    box-sizing: border-box;
    border-right:2rpx solid #f2f2f2;
}
.table_main_left_info view{
    width: 70rpx;
    font-size:12rpx;
    color:#333333;
    text-align:center;
}
.table_main_item{
     height: 26rpx; line-height: 26rpx; width: 100%;
}
.table_main_item .table_main_item_i{
    width:26rpx; height: 26rpx; text-align: center;
    font-size:12rpx;
    color:#333333;
    box-sizing: border-box;
    border-bottom:2rpx solid #cacaca;
    border-right:2rpx solid #f2f2f2;
}


.table_main_right .table_main_item:first-child .table_main_item_i{
    border-bottom:2rpx solid #f2f2f2;
}



.table_bottom{
    position: fixed; left:5%; bottom:10rpx;
    width: 90%;
    background:#ffffff;
    box-shadow:0 1rpx 5rpx 0 rgba(0,0,0,0.20);
    border-radius:8rpx;
    height:30rpx;
    font-size:12rpx;
    color:#656565;
}
.table_bottom image{
    width:17rpx; height: 17rpx; margin-right: 5rpx;
}
.table_bottom text{
    padding:0 4rpx;
}

